  <title>Associate a supplier to a contact</title>
  <taskbody>
    <context>Associate a supplier to a contact</context>
    <steps>
      <step>
        <cmd>Log into GLPI</cmd>
      </step>
      <step>
        <cmd>Go to the menu <menucascade>
            <uicontrol>Management</uicontrol>
            <uicontrol>Suppliers</uicontrol>
          </menucascade>;</cmd>
