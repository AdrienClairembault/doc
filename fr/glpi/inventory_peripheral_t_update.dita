<task id="task-1">
  <title>Modifier un périphérique</title>
  <taskbody>
    <context>Modifier un périphérique dans l&apos;inventaire</context>
    <steps>
      <step>
        <cmd>Se connecter à GLPI ;</cmd>
      </step>
      <step>
        <cmd>Aller dans le menu <menucascade>
            <uicontrol>Inventaire</uicontrol>
            <uicontrol>Périphériques</uicontrol>
          </menucascade> ;</cmd>
      </step>
      <step>
        <cmd>Optionnel : faire une recherche du périphérique ;</cmd>
      </step>
      <step>
        <cmd>Cliquer sur le nom du périphérique ;</cmd>
      </step>
      <step>
        <cmd>Modifier les champs souhaités ;</cmd>
      </step>
      <step>
        <cmd>Actualiser.</cmd>
      </step>
    </steps>
    <result>Affichage de la fiche avec les champs modifiés</result>
  </taskbody>
</task>
